<div>
  <h3>Contest Details</h3>
  <table>
    <tr>
      <th>Sport</th>
      <th>Event</th>
      <th>Name</th>
      <th>Venue</th>
      <th>Date</th>
    <tr>
    <tr>
      <td><a href="/sports/<%= @contest.event.sport.id %>"><%= @contest.event.sport.name %></a></td>
      <td><a href="/events/<%= @contest.event.id %>"><%= @contest.event.class.capitalize %> <%= @contest.event.name %></a></td>
      <td><%= @contest.name %></td>
      <td><a href="/venues/<%= @contest.venue.id %>"><%= @contest.venue.name %></a></td>
      <td><%= @contest.dt() %></td>
    </tr>
  </table>
</div>

<form action="/contests/<%= @contest.id %>" method="post">
  
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Contest">

</form>

<a href="/contests/<%= @contest.id %>/edit">Edit Contest Details</a>

<h3>Results</h3>

<div>
  <% team_size = @contest.event.team_size %>
  <table>
    <tr>
      <th><%= team_size == 1 ? "Athlete" : "Team" %></th>
      <th><%= @contest.event.score_method.capitalize %></th>
    <tr>
    <% @contest.results.each do |result| %>
      <tr>
        <td><%= team_size == 1 ? result.athlete.full_name : result.team.nation.name %></td>
        <td><%= result.print_score %></td>
        <td><a href="/contests/<%= @contest.id %>/<%= team_size == 1 ? "results" : "team_results" %>/<%= result.id %>/edit">Edit</a></td>
        <td>
          <form action="/<%= team_size == 1 ? "results" : "team_results" %>/<%= result.id %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="Delete Result">
          </form>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<a href="/contests/<%= @contest.id %>/<%= team_size == 1 ? "results" : "team_results" %>/new">Add New Result</a> 
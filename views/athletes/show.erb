<div>
  <h3>Athlete Profile</h3>
  <table>
    <tr>
      <th>Nation</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Date of Birth</th>
      <th>Gender</th>

    <tr>
    <tr>
      <td><a href="/nations/<%= @athlete.nation.id %>"><%= @athlete.nation.name %></a></td>
      <td><%= @athlete.first_name %></td>
      <td><%= @athlete.last_name %></td>
      <td><%= @athlete.dob %></td>
      <td><%= @athlete.gender %></td>
    </tr>
  </table>
</div>

<form action="/athletes/<%= @athlete.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Athlete">
</form>

<a href="/athletes/<%= @athlete.id %>/edit">Edit Athlete's Details</a>

<h3>All Results</h3>

<form method="get">
  <label for="search">Search results by Athlete:</label>
  <input type="text" name="search" value="" id="search">
  <input type="submit" value="Search">
</form>
<div>
  <h4>Individual Events</h4>
  <table>
    <tr>
      <th>Sport</th>
      <th>Event</th>
      <th>Contest</th>
      <th>Athlete</th>
      <th>Score</th>
    <tr>
    <% @results.sort! {|result_a, result_b| result_a.contest.event.sport.name <=> result_b.contest.event.sport.name} %>
    <% @results.each do |result| %>
      <% event = result.contest.event %>
      <tr>
        <td><a href= "/sports/<%= event.sport.id %>"><%= event.sport.name %></a></td>
        <td><a href= "/contests/<%= event.id %>"><%= event.class.capitalize %> <%= event.name %></a></td>
        <td><a href= "/contests/<%= result.contest_id %>"><%= result.contest.name %></a></td>
        <td><a href= "/athletes/<%= result.athlete_id %>"><%= result.athlete.full_name %></a></td>
        <td><%= result.print_score %></td>
        <td><a href="/contests/<%= result.contest.id %>/results/<%= result.id %>/edit">Edit</a></td>
      </tr>
    <% end %>
  </table>
</div>
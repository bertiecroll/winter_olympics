<div class="page-header">
  <h1>All Results</h1>
</div>

<div class="main-cell">
  <h1>Individual Events</h1>
  <table>
    <hr>
    <br>
    <tr>
      <th>Athlete</th>
      <th>Contest</th>
      <th>Score</th>
    </tr>
    <% @results.sort! {|result_a, result_b| result_a.athlete.last_name <=> result_b.athlete.last_name} %>
    <% @results.each do |result| %>
      <% event = result.contest.event %>
      <tr>
        <td class="results"><a href= "/athletes/<%= result.athlete_id %>"><%= result.athlete.full_name %></a></td>
        <td class="results"><a href= "/contests/<%= result.contest_id %>"><%= result.contest.full_name %></a></td>
        <td class="results"><%= result.print_score %></td>
      </tr>
    <% end %>
  </table>
  
</div>

<div class="main-cell">
  <h1>Team Events</h1>
  <table>
    <hr>
    <br>
    <tr>
      <th>Team</th>
      <th>Contest</th>
      <th>Score</th>
    </tr>
    <% @team_results.sort! {|result_a, result_b| result_a.team.nation.name <=> result_b.team.nation.name} %>
    <% @team_results.each do |result| %>
      <% event = result.contest.event %>
      <tr>
        <td class="results"><a href= "/teams/<%= result.team_id %>"><%= result.team.nation.name %></a></td>
        <td class="results"><a href= "/contests/<%= result.contest_id %>"><%= result.contest.full_name %></a></td>
        <td class="results"><%= result.print_score %></td>
      </tr>
    <% end %>
  </table>

</div>
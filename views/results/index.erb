<h3>All Results</h3>

<div>
  <h4>Individual Events</h4>
  <table>
    <tr>
      <th>Athlete</th>
      <th>Contest</th>
      <th>Score</th>
    <tr>
    <% @results.sort! {|result_a, result_b| result_a.athlete.last_name <=> result_b.athlete.last_name} %>
    <% @results.each do |result| %>
      <% event = result.contest.event %>
      <tr>
        <td><a href= "/athletes/<%= result.athlete_id %>"><%= result.athlete.full_name %></a></td>
        <td><a href= "/contests/<%= result.contest_id %>"><%= result.contest.full_name %></a></td>
        <td><%= result.print_score %></td>
        <td><a href="/contests/<%= result.contest.id %>/results/<%= result.id %>/edit">Edit</a></td>
      </tr>
    <% end %>
  </table>
</div>

<div>
  <h4>Team Events</h4>
  <table>
    <tr>
      <th>Team</th>
      <th>Contest</th>
      <th>Score</th>
    <tr>
    <% @team_results.sort! {|result_a, result_b| result_a.team.nation.name <=> result_b.team.nation.name} %>
    <% @team_results.each do |result| %>
      <% event = result.contest.event %>
      <tr>
        <td><a href= "/teams/<%= result.team_id %>"><%= result.team.nation.name %></a></td>
        <td><a href= "/contests/<%= result.contest_id %>"><%= result.contest.full_name %></a></td>
        <td><%= result.print_score %></td>
        <td><a href="/contests/<%= result.contest.id %>/team_results/<%= result.id %>/edit">Edit</a></td>
      </tr>
    <% end %>
  </table>
</div>
<div>
  <h3><%= @sport.name %></h3>
</div>
<div>
  <% @sport.events.each do |event| %>
    <h4><a href="/events/<%= event.id %>"><%= event.name %></a></h4>
  <% end %>
</div>

<form action="/sports/<%= @sport.id %>" method="post">
  <input type="hidden" name="_method" value="delete">  
  <input type="submit" value="Delete Sport">  
</form>
<a href="/sports/<%= @sport.id %>/edit">Edit Sport</a>
<div>
  <h3>Event</h3>
  <table>
    <tr>
      <th>Sport</th>
      <th>Name</th>
      <th>Class</th>
      <th>Score Method</th>
      <th>Team Size</th>
    <tr>
    <tr>
      <td><%= @event.sport.name %></td>
      <td><%= @event.name %></td>
      <td><%= @event.class %></td>
      <td><%= @event.score_method %></td>
      <td><%= @event.team_size == 1 ? "Individual" : "#{@event.team_size} Athletes" %></td>
    </tr>
  </table>
</div>

<form action="/events/<%= @event.id %>" method="post">
  
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Event">

</form>

<a href="/events/<%= @event.id %>/edit">Edit Event</a>
<a href="/sports/<%= @event.sport.id %>">View all <%= @event.sport.name %> Events</a>

<h3>Contests</h3>

<div>
  <table>
    <tr>
      <th>Round</th>
    <tr>
    <% @event.contests.each do |contest| %>
      <tr>
        <td><a href="/contests/<%= contest.id %>"><%= contest.name %></a></td>
      </tr>
    <% end %>
  </table>
</div>

<a href="/events/<%= @event.id %>/contests/new">Add New Contest</a> 
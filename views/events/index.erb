<h3>Events</h3>

<div>
  <form method="get">
    <input type="hidden" name="search" value="=" id="search">
    <input type="submit" value="Individual">
  </form>
  <form method="get">
    <input type="hidden" name="search" value=">" id="search">
    <input type="submit" value="Team">
  </form>
  <form method="get">
    <input type="hidden" name="search" value="" id="search">
    <input type="submit" value="All">
  </form>
</div>

<div>
  <table>
    <tr>
      <th>Sport</th>
      <th>Name</th>
      <th>Class</th>
      <th>Score Method</th>
    <tr>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.sport.name %></td>
        <td><%= event.name %></td>
        <td><%= event.class %></td>
        <td><%= event.score_method %></td>
        <td><a href="/events/<%= event.id %>">View</a></td>
      </tr>
    <% end %>
  </table>
</div>


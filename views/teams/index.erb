<h3>Teams</h3>

<div>
  <table>
    <tr>
      <th>Nation</th>
      <th>Team</th>
    <tr>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.nation.name %></td> 
        <td><%= team.event.sport.name %> <%= team.event.name %></td>
        <td><a href="/teams/<%= team.id %>">View</a></td>
      </tr>
    <% end %>
  </table>
</div>

<a href="/teams/new">Add New Team</a> 